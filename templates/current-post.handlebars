<a href="#/comment/add" class="add-new-thread btn btn-primary" id="add-new-thread">Add comment</a>

<ul id="single-sortable">
        <li>
            <div class="panel panel-default">
                <header class="panel-heading">
                    <h2 class="panel-title"><a href="#/post/{{_id}}">{{title}}</a></h2>
                </header>
                <div class="panel-body">
                    <main class="posts-content">
                        <h4>Author: {{author.username}}</h4>
                        <article>{{content}}</article>
                    </main>
                    <footer class="posts-footer">
                        <ul class="nav nav-pills" role="tablist">
                            {{!--<li role="presentation" class="comments-count">Comments <span class="badge">{{this.comments}}</span></li>--}}
                            <li role="presentation" class="category-info"><span class="btn btn-warning">{{category}}</span></li>
                        </ul>
                    </footer>
                </div>
            </div>
        </li>
</ul>